{
	"id": "com.sap.sample.coloredbox",
	"version": "1.0.0",
	"name": "Colored Box",
	"description": "A colored box",
	"newInstancePrefix": "ColoredBox",
	"icon": "https://github.wdf.sap.corp/pages/orca/custom-widget-samples/coloredbox/icon.png",
	"vendor": "SAP",
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "com-sap-sample-coloredbox",
			"url": "https://github.wdf.sap.corp/pages/orca/custom-widget-samples/coloredbox/coloredbox_main.js",
			"integrity": "sha256-oqsfB2Q6HbuxKuI4sbNL6RQSHC4gHOxGmLwqiYIK6EA=",
			"ignoreIntegrity": false
		},
		{
			"kind": "styling",
			"tag": "com-sap-sample-coloredbox-styling",
			"url": "https://github.wdf.sap.corp/pages/orca/custom-widget-samples/coloredbox/coloredbox_styling.js",
			"integrity": "sha256-GTnm+Uc75SAGTTjBEr1QqtwXjXVlD6L4MMZbM0z2Va0=",
			"ignoreIntegrity": false
		},
		{
			"kind": "builder",
			"tag": "com-sap-sample-coloredbox-builder",
			"url": "https://github.wdf.sap.corp/pages/orca/custom-widget-samples/coloredbox/coloredbox_builder.js",
			"integrity": "sha256-+5erR8Ay33ebfRPYe9KTfl4hlfBgQoKaZY1lTaacaWQ=",
			"ignoreIntegrity": false	}
	],
	"properties": {
		"color": {
			"type": "string",
			"description": "Background color",
			"default": "red"
		},
		"opacity": {
			"type": "number",
			"description": "Opacity",
			"default": 1
		},
		"showDimensions": {
			"type": "boolean",
			"description": "Show Dimensions",
			"default": false
		},
		"width": {
			"type": "integer",
			"default": 100
		},
		"height": {
			"type": "integer",
			"default": 100
		}
	},
	"methods": {
		"setColor": {
			"description": "Sets the background color.",
			"parameters": [
				{
					"name": "newColor",
					"type": "string",
					"description": "The new background color"
				}
			],
			"body": "this.color = newColor;"
		},
		"getColor": {
			"returnType": "string",
			"description": "Returns the background color.",
			"parameters": [],
			"body": "return this.color;"
		}
	},
	"events": {
		"onClick": {
			"description": "Called when the user clicks the Colored Box."
		}
	}
}
